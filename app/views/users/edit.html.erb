<div class='pattern-horizontal-lines-lg'>
  <div class='d-flex align-items-center' style='background: rgba(250,250,250,0.90); height: 750px;'>
    <div class="mx-auto border px-4 px-sm-5 py-5 shadow-lg bg-white" style='width: 560px;'>
      <h2 class='mb-4'>User info</h2>
      <div class='error'>
        <%= render 'layouts/error', obj: @user %>
      </div>
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Name', class:'font-weight-bold'%>
        <%= f.text_field :name, class:"form-control col-md-5" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, 'Image', class:'font-weight-bold' %>
        <%= f.attachment_field :profile_image, class:"form-control-file" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, 'Intoroduciton', class:'font-weight-bold'%>
        <%= f.text_area :introduction, class:"form-control", rows:'4' %>
      </div>
      <div class="form-group mt-4">
        <%= f.submit "Update User", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>