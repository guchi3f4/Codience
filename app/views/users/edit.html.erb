<div class="col-lg-6 col-md-8 mx-auto border px-5" style='height: 750px; padding-top: 8%;'>
  <h2 class='mb-4'>User info</h2>
  <div class='error'>
    <%= render 'layouts/error', obj: @user %>
  </div>
  <%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, class:"form-control col-md-5" %>
  </div>
  <div class="form-group">
    <%= f.label :profile_image, 'Image' %>
    <%= f.attachment_field :profile_image, class:"form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, 'Intoroduciton'%>
    <%= f.text_area :introduction, class:"form-control", rows:'4' %>
  </div>
  <div class="form-group mt-4">
    <%= f.submit "Update User", class:"btn btn-success" %>
  </div>
  <% end %>
</div>
