<div class='container py-5'>
  <div class='row'>
    <div class='col-md-4'>
      <h3 class='mb-3'>User info</h3>
      <div class='col-md-11 px-0'>
        <%= render 'layouts/user_info', user: current_user %>
        <%= render 'articles/article_form', article: @article %>
      </div>
    </div>
    <div class='col-md-8'>
      <h2>Users</h2>
      <div class='row'>
        <% @users.each do |user| %>
        <div class='col-6 mb-3'>
          <%= render 'layouts/user_info', user: user %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>