<div class='pattern-horizontal-lines-lg'>
  <div class='d-flex align-items-center' style='background: rgba(250,250,250,0.9); height: 750px;'>
    <div class='mx-auto border p-5 mt-4 bg-white rounded shadow-lg' style='width: 560px;'>
      <h2>パスワード再設定</h2>
      <%= form_with model: @user, url: user_password_path, class: 'registration-main', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='py-3'>
          <div class="form-group">
            <%= f.label :email, 'メールアドレス', class:'font-weight-bold' %>
            <%= f.email_field :email, class:"form-control", id:"email", autofocus: true %>
          </div>
          <div class="form-group">
            <p class='form-bottom-text'>
              入力されたメールアドレスに<br>
              パスワード再設定メールを送信します。
            </p>
          </div>
          <div class='register-btn mt-4'>
            <%= f.submit "送信" ,class:"btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
