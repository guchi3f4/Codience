<div class='pattern-horizontal-lines-lg'>
  <div class='d-flex align-items-center' style='background: rgba(250,250,250,0.9); height: 750px;'>
    <div class='mx-auto border p-5 mt-4 bg-white rounded shadow-lg' style='width: 560px;'>
      <h2>パスワード再設定</h2>
      <%= form_with model: @user, url: user_password_path, method: :patch, class: 'registration-main', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='py-3'>
          <div class="form-group">
            <%= f.label :password, class:'font-weight-bold' %>
            <em>（6文字以上）</em>
            <%= f.password_field :password, class:"form-control", id:"password" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'Password', class:'font-weight-bold' %>
            <em>（確認用）</em>
            <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation" %>
          </div>
          <%# トークン %>
          <%= f.hidden_field :reset_password_token %>
          <div class='register-btn mt-4'>
            <%= f.submit "パスワード変更" ,class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>