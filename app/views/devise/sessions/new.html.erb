<div class='pattern-horizontal-lines-lg'>
  <div class='py-5 px-5' style='background: rgba(250,250,250,0.9); height: 750px;'>
    <div class='col-5 mx-auto border py-4 px-5 bg-white rounded shadow-lg' style='margin-top: 5%;'>
　　<h2 class='pb-3'>Log in</h2>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class='col-11'>
          <div class="form-group">
            <%= f.label :email, class:'font-weight-bold' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, class:'font-weight-bold' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
          </div>
        </div>
        <div class="form-group mt-4">
          <%= f.submit "Log in", class:'btn btn-primary'%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
