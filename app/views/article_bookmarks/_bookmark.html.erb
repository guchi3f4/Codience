<% if article.bookmarked_by?(current_user) %>
    <%= link_to article_article_bookmarks_path(article), method: :delete, class: 'text-danger', remote:true do %>
      <i class="far fa-bookmark"></i> <%= article.article_bookmarks.count %>
    <% end %>
<% else %>
    <%= link_to article_article_bookmarks_path(article), method: :post, remote:true do %>
      <i class="far fa-bookmark"></i> <%= article.article_bookmarks.count %>
    <% end %>
<% end %>