<h3 class="my-3">New Article</h3>
<%= form_with model: article, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :link, 'Link' %>
    <%= f.text_field :link, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body, class:"form-control", 'style':'height: 100px;' %>
  </div>
  <div class='form-group'>
    <%= label_tag :category_name,'Top Tag' %>
    <%= text_field_tag :category_name, params[:category_name], class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :tag_name,'Top Tag' %>
    <%= text_field_tag :tag_name, params[:tag_name], class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.button "Create Book", type:"button", onclick:"submit();", class:"btn btn-success" %>
  </div>
<% end %>