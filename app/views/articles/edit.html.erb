<div class='col-md-10 col-lg-8 mx-auto py-5 px-5 border'>
  <div class='article-error'>
    <%= render 'layouts/error', obj: @article %>
  </div>
  <h2 class="mb-5">Edit Article</h2>
  <%= form_with model: @article, local:true do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Title', class:'font-weight-bold' %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group col-10 px-0">
        <%= f.label :link, 'Link', class:'font-weight-bold' %>
        <%= f.text_field :link, class:"form-control" %>
    </div>
    <div class='form-group col-4 px-0'>
      <%= label_tag :category_name,'Category', class:'font-weight-bold' %>
      <%= text_field_tag :category_name, @category.name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :tag_name,'Tag', class:'font-weight-bold' %>
      <%= text_field_tag :tag_name, @join_tag_names, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body, 'Body', class:'font-weight-bold' %>
      <%= f.text_area :body, class:"form-control", rows:'9' %>
    </div>
    <div class="form-group mt-4">
      <%= f.button "Update Book", type:"button", onclick:"submit();", class:"btn btn-success" %>
    </div>
  <% end %>
</div>