<% article.article_comments.each do |article_comment| %>
  <div>
    <%= link_to user_path(article_comment.user) do %>
      <%= attachment_image_tag article_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
    <% end %>
    <span class="align-bottom"><%= article_comment.user.name %></span>
    <% if article_comment.user == current_user %>
      <%= link_to "Destroy", article_article_comment_path(article_comment.article_id, article_comment), method: :delete, remote: true, class: "btn btn-danger btn-sm align-bottom" %>
    <% end %>
  </div>
  <div>
    <%= article_comment.comment%>
ã€€</div>
<% end %>