<% article.article_comments.each do |article_comment| %>
  <div class='d-flex mb-4'>
    <%= link_to user_path(article_comment.user) do %>
      <%= attachment_image_tag article_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg", class:'rounded-circle mr-3' %>
    <% end %>
    <div>
      <span class="align-bottom font-weight-bold"><%= article_comment.user.name %></span><br>
      <%= article_comment.comment%>
  　</div>
  　<div class='ml-auto'>
  　   <% if article_comment.user == current_user %>
        <%= link_to "Destroy", article_article_comment_path(article_comment.article_id, article_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger mt-2" %>
      <% end %>
  　</div>
　</div>
<% end %>