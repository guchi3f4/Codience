<% if user_signed_in? %>
  <% if article.favorited_by?(current_user) %>
      <%= link_to article_article_favorites_path(article), method: :delete, class:'text-danger', remote:true do %>
        <i class="far fa-thumbs-up"></i> <%= article.article_favorites.count %>
      <% end %>
  <% else %>
      <%= link_to article_article_favorites_path(article), method: :post, remote:true do %>
        <i class="far fa-thumbs-up"></i> <%= article.article_favorites.count %>
      <% end %>
  <% end %>
<% else %>
  <i class="far fa-thumbs-up text-primary"></i><span class='text-primary'> <%= article.article_favorites.count %></span>
<% end %>