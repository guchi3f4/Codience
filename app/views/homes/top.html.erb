<div class='container'>
  <h1>ようこそCodienceへ</h1>
  <div class='col-8 mx-auto'>
    <%= form_with url: root_path, method: :get do |f| %>
      <div id="top-tags">
        <div id="category-names" data-json="<%= @category_names.to_json %>"></div>
        <%= javascript_pack_tag 'top_tags_vue' %>
      </div>
      <div class="form-group">
        <%= f.submit "検索", style:'display: none;', id:"search-btn" %>
      </div>
    <% end %>
    <div class='border-dark bg-light p-2' style='border: 2px solid '>
      <div class='results border border-primary bg-white shadow-sm' style='border-radius: 4%;'>
        <%= render 'layouts/amcharts', results: @results %>
      </div>
    </div>
  </div>
</div>