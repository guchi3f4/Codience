<div class='border p-3 shadow-sm' style='border-radius: 25%;'>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:'col-5 offset-1' %>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th>
        <%= link_to following_user_path(user) do %>
          <%= user.following.count %>
        <% end %>
      </th>
    </tr>
    <tr>
      <th>followers</th>
      <th>
        <%= link_to followers_user_path(user) do %>
          <%= user.followers.count %>
        <% end %>
      </th>
    </tr>
  </table>
</div>
<div class="row">
  <%= link_to edit_user_path(user.id), class:"btn btn-sm btn-block btn-outline-secondary mt-4" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>